# OpenAI Configuration
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# Database Configuration
# Absolute path recommended so dashboard and python share the same DB
SQLITE_PATH=/absolute/path/to/suppliersync.db

# API Configuration
API_PORT=8000
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Security Configuration
# In production, specify allowed hosts: localhost,example.com
TRUSTED_HOSTS=*
# In production, specify allowed origins: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Governance Configuration
MAX_DAILY_PRICE_DRIFT=0.20
MIN_MARGIN_PCT=0.05
BLOCKED_CATEGORIES=
ALLOWED_CATEGORIES=

# RAG Configuration
RAG_DOCS_PATH=data/docs
RAG_PERSIST_PATH=.chroma
